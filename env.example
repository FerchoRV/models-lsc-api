# Configuración de la aplicación
PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# Configuración de CORS (ya configurado en main.py)
# CORS_ORIGINS=http://localhost:3000,https://www.colsign.com.co,https://colsigns-app.vercel.app

# Configuración de GCP (para despliegue)
GCP_PROJECT_ID=colsignproject
GCP_REGION=us-central1
GCP_ARTIFACT_REPO=model-api-repo

# Configuración de modelos
MODEL_ABECEDARIO_PATH=./models/actionAbecedario.h5
MODEL_PALABRAS_V2_PATH=./models/actionPalabrasV2.h5

# Configuración de MediaPipe
MEDIAPIPE_MODEL_COMPLEXITY=1
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Configuración de logging
LOG_LEVEL=INFO
